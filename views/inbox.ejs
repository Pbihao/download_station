<% this.title = '收件箱' %>
<%-include('header')-%>
<div class="padding">
    <% if (user) {%>
            <% if (messages && messages.length) { %>

                <table class="ui very basic center aligned table">
                    <thead>
                    <tr>
                        <th style="width: 20%; ">标号</th>
                        <th style="width: 20%; ">标题</th>
                        <th style="width: 15%; ">接收时间</th>
                        <th style="width: 25%; ">发送者</th>
                        <th style="width: 20%; ">查看</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for (let message of messages) { %>
                        <tr>
                            <td><%= message.id %></td>
                            <td><%= message.title %></td>
                            <td>
                               <%= station.utils.formatDate(parseInt(message.receive.date))%>
                            </td>
                            <td><%= message.receive.user.name %></td>
                            <td><a href="<%= station.utils.makeUrl(['inbox', 'watch', message.id]) %>" class="ui small green button">查看</a></td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
                <br>
            <% } else {%>
                <div class="ui placeholder segment">
                    <div class="ui icon header">
                        <i class="comments icon" style="margin-bottom: 20px; "></i>
                        暂未收到任何信息
                    </div>
                </div>
            <% } %>
    <% } else { %>
        <div class="ui placeholder segment">
            <div class="ui icon header">
                <i class="comments icon"></i>
                检查收件箱前请先登录
            </div>
        </div>
    <%}%>
</div>

<script>
    $(function () {
        setInterval(function () {
            window.location.reload()
        }, 120000)
    })

</script>
<%-include('footer')-%>
